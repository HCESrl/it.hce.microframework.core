{
  "type": "object",
  "properties": {
    "templateName": {
      "type": "string",
      "default": "homepage",
      "required": true
    },
    "direction": {
      "type": "string",
      "default": "ltr",
      "required": false
    },
    "ajax": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "xml": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "components": {
      "type": "array",
      "required": true,
      "items": [
        {
          "type": "object",
          "required": true,
          "properties": {
            "name": {
              "type": "string",
              "required": true
            },
            "componentName": {
              "type": "string",
              "required": true
            },
            "dataSet": {
              "type": "string",
              "required": true,
              "default": "default"
            }
          }
        }
      ]
    }
  }
}
